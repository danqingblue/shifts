<% title "Data Objects" %>
<% form_tag '/data_objects/index', :id => "view_options" do %>
  <div id="selection_menu">

		<h1><%="Data Objects between #{@start_date.to_date.strftime("%b %d, %Y")} and #{@end_date.to_date.strftime("%b %d, %Y")}"%></h1>

		<div id="left_stuff">
			<fieldset class ="index">
				<legend>Date Range</legend>
						<% form_tag(:controller => 'data_objects', :action => 'index', :method => :get) do %>
					<p>
					  <%= label_tag :start_date %><br />
					  <%= date_select(:data_object, :start_date, :default => @start_date)%>
					</p>
					<p>
					  <%= label_tag :end_date %><br />
					  <%= date_select(:data_object, :end_date, :default => @end_date)%>
					</p>
				  <div><%= submit_tag 'Update dates' %></div>
				<% end -%>
			</fieldset>
		</div>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>

    <div id="group_type">
      <%= select_tag "view_options[group_type]", options_for_select(@group_type_options, @selected_type) %>

    <%= observe_field('view_options_group_type',
        :url => { :controller => :data_objects,
                  :action => :index,
                  :layout => false},
        :method => :get,
        :with => "'group_type=' + escape(value)",
        :on => "change") %>
        </div>

    <div id='group_by' style='display:none'>
      <%# empty div for the ajax call to act on %>
    </div>

    <%# TODO: enable non-javascript compatibility %>
    <%#= submit_tag "Update", :id => 'submit' %>

  </div>

<% end -%>
<br>
<% if @data_objects.size < 1 -%>
  <tr><td colspan=5>(No data objects within specified dates)</td></tr>
<% end -%>
<br>
<% if DataType.first %>
  <%= render :partial => "data_objects" %>
  <br>
  <% if current_user.is_admin_of?(current_department) %>
    <%= link_to "New Data Object", new_data_object_path %>
  <% end %>
<% else %>
  You must set up a <%= link_to_if current_user.is_admin_of?(current_department), "data type", new_data_type_path %> before you can create any data objects.
<% end %>

